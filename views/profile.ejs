<% if(user != null) { %>
<div class="row">
    <div class="col-12 col-md-4">
        <img src="/uploads/<%- user.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- user.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
        <div class="row">
        <div class="col-12"><h1><%- user.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i>HELLO</div>
        <div class="col-12" style="white-space: pre-line;">
            <h4>Cooking Instructions</h4>
            <%- user.email %>
        </div>
    </div>
</div>
<% } else { %>
    <p>Unable to Register</p>
<% } %>